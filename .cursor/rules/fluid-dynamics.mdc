    """Hagen-Poiseuille solution."""
    return (dp_dx / (4 * viscosity)) * (radius**2 - r**2)

def power_law_analytical_solution(radius, dp_dx, K, n):
    """Power-law fluid solution."""
    m = 1/n
    return ((dp_dx / (2*K)) * (radius**(m+1) - r**(m+1))) ** m

